<?xml version="1.0" encoding="utf-8" ?>
<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
xmlns:wpfPropertyGrid="http://schemas.denisvuyka.wordpress.com/wpfpropertygrid">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="SelectedStrategyLabel"  Content="Strategy Settings &amp; Configuration" Foreground="White"></Label>
        <Button Grid.Row="1" x:Name="BtnOk" Content="Ok" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <wpfPropertyGrid:PropertyGrid x:Name="PropertyGrid"></wpfPropertyGrid:PropertyGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>